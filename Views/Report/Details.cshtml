@model workload.Models.Report

<form method="post" asp-action="Details">
    <input asp-for="Id" hidden />
    <div class="border p3">
        <div class="form-group row">
            <h2 class="text-info p1-3">View report</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                Название вида работы
                            </th>
                            <th>
                                Норма времени (в часах)
                            </th>
                            <th>
                                Категория вида работы
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model.ProcessActivities)
                        {
                            <tr>
                                <td width="50%"></td>
                                <td width="10%"></td>
                                <td width="30%"></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @*KEEP THIS EMPTY*@
            </div>
        </div>
    </div>
</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}
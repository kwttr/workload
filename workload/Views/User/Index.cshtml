@using Microsoft.AspNetCore.Identity;
@model List<Teacher>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список пользователей</h2>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        ФИО пользователя
                    </th>
                    <th>
                        Почта
                    </th>
                    <th>
                        Дополнительная информация
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td width="25%">@obj.LastName @obj.FirstName @obj.Patronymic</td>
                        <td width="18%">@obj.Email</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">Редактировать</a>
                                <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">Удалить</a>
                                <a asp-route-Id="@obj.Id" asp-action="Block" class="btn btn-danger mx-2">Заблокировать</a>
                                <a asp-route-Id="@obj.Id" asp-action="ChangePassword" class="btn btn-danger mx=2">Сменить пароль</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Пользователей не существует</p>
    }
</div>
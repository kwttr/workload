@model IEnumerable<workload_Models.ActivityType>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">ActivityTypes</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Index" class="btn btn-success">Back</a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Название вида работы
                    </th>
                    <th>
                        Норма времени (в часах)
                    </th>
                    <th>
                        Категория вида работы
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td width="10%">@obj.NormHours</td>
                        <td width="30%">@obj.Category.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Activity types exists.</p>
    }
</div>
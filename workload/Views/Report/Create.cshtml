@model workload_Models.ViewModels.ReportVM

<form method="post" asp-action="Create">
    <input asp-for="report.hodName" hidden />
    <input asp-for="report.hodSecondName" hidden />
    <input asp-for="report.hodPatronymic" hidden />
    <input asp-for="report.DepartmentId" hidden />
    <div class="border p3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info p1-3">Добавить отчет</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="report.Title"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="report.Title" class="form-control" />
                        <span asp-validation-for="report.Title" class="text-danger"></span>
                    </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="report.TeacherId"></label>
                        </div>
                        <div class="col-8">
                            <select asp-for="report.TeacherId" asp-items="@Model.TeacherSelectList" class="form-control">
                                <option disabled selected>--Select Teacher--</option>
                            </select>
                            <span asp-validation-for="report.TeacherId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="report.Rate"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="report.Rate" class="form-control" />
                            <span asp-validation-for="report.Rate" class="text-danger"></span>
                        </div>
                    </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Создать" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Назад</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        // переопределение валидации на стороне клиента
        $.validator.methods.range = function (value, element, param) {
            var globalizedValue = value.replace(".", ",");
            return this.optional(element) || (globalizedValue >= param[0] && globalizedValue <= param[1]);
        }

        $.validator.methods.number = function (value, element) {
            return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:[\s\.,]\d{3})+)(?:[\.,]\d+)?$/.test(value);
        }
    </script>
}
@model IEnumerable<workload_Models.Report>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Report List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary">Create New Report</a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Teacher
                    </th>
                    <th>
                        Teacher's degree
                    </th>
                    <th>
                        Teacher's rate
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="30%">@obj.Title</td>
                        <td width="20%">@obj.Teacher.FirstName @obj.Teacher.LastName @obj.Teacher.Patronymic</td>
                        <td width="20%">@obj.CurrentDegree</td>
                        <td width="20%">@obj.Rate</td>
                        <td class="text-center">
                            <div class="w-100 btn-group" role="group">
                                <a asp-route-id="@obj.Id" asp-action="Edit" class="btn btn-warning mx-2">Edit</a>
                                <a asp-route-Id="@obj.Id" asp-action="Details" class="btn btn-primary mx-2">View</a>
                                <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No reports exists.</p>
    }
</div>
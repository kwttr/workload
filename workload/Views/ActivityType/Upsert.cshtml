@model workload_Models.ViewModels.ActivityTypeVM

@{
    var title = "Create ActivityType";
}
<form method="post">
    @if (Model.ActivityType.Id != 0)
    {
        title = "Edit ActivityType";
        <input asp-for="ActivityType.Id" hidden />
    }
    <div class="border p3">
        <div class="form-group row">
            <h2 class="text-info p1-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ActivityType.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ActivityType.Name" class="form-control" />
                        <span asp-validation-for="ActivityType.Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ActivityType.NormHours"></label>
                    </div>
                    <div class="col-8">
                        <input type="number" step="0.01" asp-for="ActivityType.NormHours" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ActivityType.CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="ActivityType.CategoryId" asp-items="@Model.CategorySelectList" class="form-control">
                            <option disabled selected>--Select Category--</option>
                        </select>
                        <span asp-validation-for="ActivityType.CategoryId" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            @if (Model.ActivityType.Id != 0)
                            {
                                //update
                                <input type="submit" class="btn btn-info w-100" value="Update" />
                            }
                            else
                            {
                                //create
                                <input type="submit" class="btn btn-info w-100" value="Create" />
                            }
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @*KEEP THIS EMPTY*@
            </div>
        </div>
    </div>
</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}
@model workload_Models.ViewModels.ReportDetailsVM
@{
    decimal totalPlan = 0;
    decimal totalFact = 0;
    foreach (var activityType in Model.ProcessActivityTypes)
    {
        totalPlan += activityType.HoursPlan;
        totalFact += activityType.HoursFact;
    }
    decimal totalDeviation = Math.Abs(totalPlan - totalFact);

    decimal firstCatPlan = 0;
    decimal firstCatFact = 0;
    foreach (var activityType in Model.ProcessActivityTypes.Where(pat => pat.CategoryId == 1))
    {
        firstCatPlan += activityType.HoursPlan;
        firstCatFact += activityType.HoursFact;
    }
    decimal firstCatDeviation = Math.Abs(firstCatPlan - firstCatFact);

    decimal secondCatPlan = 0;
    decimal secondCatFact = 0;
    foreach (var activityType in Model.ProcessActivityTypes.Where(pat => pat.CategoryId == 2))
    {
        secondCatPlan += activityType.HoursPlan;
        secondCatFact += activityType.HoursFact;
    }
    decimal secondCatDeviation = Math.Abs(secondCatPlan - secondCatFact);

    decimal thirdCatPlan = 0;
    decimal thirdCatFact = 0;
    foreach (var activityType in Model.ProcessActivityTypes.Where(pat => pat.CategoryId == 3))
    {
        thirdCatPlan += activityType.HoursPlan;
        thirdCatFact += activityType.HoursFact;
    }
    decimal thirdCatDeviation = Math.Abs(thirdCatPlan - thirdCatFact);

    decimal fourthCatPlan = 0;
    decimal fourthCatFact = 0;
    foreach (var activityType in Model.ProcessActivityTypes.Where(pat => pat.CategoryId == 4))
    {
        fourthCatPlan += activityType.HoursPlan;
        fourthCatFact += activityType.HoursFact;
    }
    decimal fourthCatDeviation = Math.Abs(fourthCatPlan - fourthCatFact);

}
<form method="post" asp-action="Details">
    <input asp-for="Report.Id" hidden />
    <div class="border p3">
        <div class="form-group row">
            <h2 class="text-info p1-3">@Model.Report.Title</h2>
            <div class="col-8 offset-4">
                <a asp-action="Index" class="btn btn-primary w-50">Back</a>
                <a asp-route-Id="@Model.Report.Id" asp-action="ExportReport" class="btn btn-warning mx-2">Export</a>
            </div>
        </div>
        <div class="row">
            <div class="col-16">
                <h1>Титульник</h1>
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th rowspan="2" style="width:50px; text-align:center">№ п/п</th>
                            <th rowspan="2" style="text-align:center">Вид Работы</th>
                            <th colspan="2" style="text-align:center">Объем работы, ч</th>
                            <th rowspan="2" style="text-align:center">Отклонение (+,-)</th>
                        <tr>
                            <th style="text-align:center">планируемый</th>
                            <th style="text-align:center">фактический</th>
                        </tr>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th rowspan="18" style="text-align:center">1</th>
                            <th>Учебная работа, всего за учебный год</th>
                            <th>@totalPlan</th>
                            <th>@totalFact</th>
                            <th>@totalDeviation</th>
                        </tr>
                        <tr>
                            <th colspan="4">в том числе:</th>
                        </tr>
                        <tr>
                            <th></th>
                            <th colspan="2" style="text-align:center">1 семестр</th>
                            <th></th>
                        </tr>
                        <tr>
                            <th>- сентябрь</th>
                            <th rowspan="7"></th>
                            <th>@Html.DisplayFor(model => model.Report.septemberFact)</th>
                            <th></th>
                        </tr>
                        <tr>
                            <th>- октябрь</th>
                            <th>@Html.DisplayFor(model => model.Report.octoberFact)</th>
                            <th></th>
                        </tr>
                        <tr>
                            <th>- ноябрь</th>
                            <th>@Html.DisplayFor(model => model.Report.novemberFact)</th>
                            <th></th>
                        </tr>
                        <tr>
                            <th>- декабрь</th>
                            <th>@Html.DisplayFor(model => model.Report.decemberFact)</th>
                            <th></th>
                        </tr>
                        <tr>
                            <th>- январь</th>
                            <th>@Html.DisplayFor(model => model.Report.januaryFact)</th>
                            <th></th>
                        </tr>
                        <tr>
                            <th>- анкетирование студентов о качестве обучения</th>
                            <th>@Html.DisplayFor(model => model.Report.surveyFirstSemester)</th>
                            <th></th>
                        </tr>
                        <tr>
                            <th style="text-align:right">Итого 1 семестр</th>
                            <th></th>
                            <th></th>
                        </tr>
                        <tr>
                            <th></th>
                            <th colspan="2" style="text-align:center">2 семестр</th>
                            <th></th>
                        </tr>
                        <tr>
                            <th>- февраль</th>
                            <th rowspan="7"></th>
                            <th>@Html.DisplayFor(model => model.Report.februaryFact)</th>
                            <th></th>
                        </tr>
                        <tr>
                            <th>- март</th>
                            <th>@Html.DisplayFor(model => model.Report.marchFact)</th>
                            <th></th>
                        </tr>
                        <tr>
                            <th>- апрель</th>
                            <th>@Html.DisplayFor(model => model.Report.aprilFact)</th>
                            <th></th>
                        </tr>
                        <tr>
                            <th>- май</th>
                            <th>@Html.DisplayFor(model => model.Report.mayFact)</th>
                            <th></th>
                        </tr>
                        <tr>
                            <th>- июнь</th>
                            <th>@Html.DisplayFor(model => model.Report.juneFact)</th>
                            <th></th>
                        </tr>
                        <tr>
                            <th>- анкетирование студентов о качестве обучения</th>
                            <th>@Html.DisplayFor(model => model.Report.secondSemesterFact)</th>
                            <th></th>
                        </tr>
                        <tr>
                            <th style="text-align:right">Итого 2 семестр</th>
                            <th></th>
                            <th></th>
                        </tr>
                        <tr>
                            <th style="text-align:center">2</th>
                            <th>Учебно-методическая работа</th>
                            <th>@firstCatPlan</th>
                            <th>@firstCatFact</th>
                            <th>@firstCatDeviation</th>
                        </tr>
                        <tr>
                            <th style="text-align:center">3</th>
                            <th>Организационно-методическая работа</th>
                            <th>@secondCatPlan</th>
                            <th>@secondCatFact</th>
                            <th>@secondCatDeviation</th>
                        </tr>
                        <tr>
                            <th style="text-align:center">4</th>
                            <th>Научно-исследовательская и инновационная работа</th>
                            <th>@thirdCatPlan</th>
                            <th>@thirdCatFact</th>
                            <th>@thirdCatDeviation</th>
                        </tr>
                        <tr>
                            <th style="text-align:center">5</th>
                            <th>Профориентационная и воспитательная работа</th>
                            <th>@fourthCatPlan</th>
                            <th>@fourthCatFact</th>
                            <th>@fourthCatDeviation</th>
                        </tr>
                    </tbody>
                </table>
                @foreach (var category in Model.CategoryList)
                {
                    <h1>@category.Name</h1>
                    <table class="table table-bordered table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th rowspan="4">Название вида работы</th>
                                <th colspan="6" style="text-align:center;">Объем работы</th>
                                <th rowspan="4" style="text-align:center;">Норма часов</th>
                            <tr>
                                <th colspan="3" style="text-align:center;">планируемый</th>
                                <th colspan="3" style="text-align:center;">фактический</th>
                            <tr>
                                <th rowspan="2">дата</th>
                                <th colspan="2">количество</th>
                                <th rowspan="2">дата</th>
                                <th colspan="2">количество</th>
                            </tr>
                            <tr>
                                <th>в час</th>
                                <th>в ед.</th>
                                <th>в час</th>
                                <th>в ед.</th>
                            </tr>
                            </tr>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var processActivity in Model.ProcessActivityTypes.Where(u => u.CategoryId == category.Id))
                            {
                                <tr>
                                    <td>@Html.DisplayFor(Model=>processActivity.Name)</td>
                                    <td>@Html.DisplayFor(Model=>processActivity.DatePlan)</td>
                                    <td>@Html.DisplayFor(Model=>processActivity.HoursPlan)</td>
                                    <td>@Html.DisplayFor(Model=>processActivity.UnitPlan)</td>
                                    <td>@Html.DisplayFor(Model=>processActivity.DateFact)</td>
                                    <td>@Html.DisplayFor(Model=>processActivity.HoursFact)</td>
                                    <td>@Html.DisplayFor(Model=>processActivity.UnitFact)</td>
                                    <td style="text-align: center; vertical-align:middle;">@Html.DisplayFor(Model=>processActivity.NormHours)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                @if (Model.Report.StatusId == 2)
                {
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <a asp-route-id="@Model.Report.Id" asp-action="ApproveReport" class="btn btn-success w-50">Approve</a>
                        </div>
                    </div>
                  </div>
                }
            </div>
            <div class="col-4">
                @*KEEP THIS EMPTY*@
            </div>
        </div>
    </div>
</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}
@model List<workload_Models.ViewModels.ProfileVM>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Profile</h2>
        </div>
    </div>
    <br /><br />

    @if (Model.Count() != 0)
    {
        if (Model.Any(x => x.Role == "HeadOfDepartment"))
        {
            <h3>Вы являетесь заведующим кафедрой для:</h3>
            @foreach (var hod in Model.Where(c => c.Role == "HeadOfDepartment"))
            {
                <p>hod</p>
            }
        }
        if (Model.Any(x=>x.Role == "Teacher"))
        {
            <h3>Вы являетесь работником на следующих кафедрах:</h3>
            @foreach(var teacher in Model.Where(c=>c.Role == "Teacher"))
            {
                <p>teach</p>
            }
        }
    }
</div>
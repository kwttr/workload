@model List<workload_Models.Teacher>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список работников</h2>
        </div>
        <div class="col-6 text-right">
        <a asp-action="Index" class="btn btn-primary">Назад</a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Имя работника
                    </th>
                    <th>
                        Информация
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.FirstName @obj.LastName @obj.Patronymic</td>
                        <td class="text-center">Информация</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Работников не существует.</p>
    }
</div>